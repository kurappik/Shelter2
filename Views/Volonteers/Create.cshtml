@model Shelter2.Models.Volonteer

@{
    ViewData["Title"] = "Create";
}

<h1>Создать</h1>

<h4>Волонтеры</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameVolonteer" class="control-label"></label>
                <input asp-for="NameVolonteer" class="form-control" />
                <span asp-validation-for="NameVolonteer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateVolonteer" class="control-label"></label>
                <input asp-for="DateVolonteer" class="form-control" />
                <span asp-validation-for="DateVolonteer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusVolonteer" class="control-label"></label>
                <input asp-for="StatusVolonteer" class="form-control" />
                <span asp-validation-for="StatusVolonteer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AgeVolonteer" class="control-label"></label>
                <input asp-for="AgeVolonteer" class="form-control" />
                <span asp-validation-for="AgeVolonteer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PriceVolonteer" class="control-label"></label>
                <input asp-for="PriceVolonteer" class="form-control" />
                <span asp-validation-for="PriceVolonteer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShelterId" class="control-label"></label>
                <select asp-for="ShelterId" class ="form-control" asp-items="ViewBag.ShelterId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
